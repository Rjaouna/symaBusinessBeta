{# templates/user_command/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Utilisateurs avec Commandes{% endblock %}

{% block body %}
    <div class="container mt-5">
<h4 class="mb-5 border-bottom border-secondary pb-2">
    <i class="text-secondary fa-solid fa-sim-card"></i> Commandes en attente de validation</h4>

        {% if usersWithOrders is empty %}
            <div class="alert alert-warning" role="alert">
                Aucun utilisateur n'a de commandes en cours ou en attente.
            </div>
        {% else %}
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Client</th>
                        <th scope="col">Commandes</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in usersWithOrders %}
                        <tr>
                            <td><a href="{{path('biper_serial_number', {'clientId': item.user.codeClient})}}">{{ item.user.nomResponsable }}</a></td>
                            <td>
                                <div class="d-flex flex-wrap">
                                    {% for commande in item.commandes %}
                                        <div class="m-1">
                                            {% if commande.status == 'en_cours' %}
                                                <button class="btn btn-secondary text-primary">
                                                    Commande ID: {{ commande.numero }} - {{ commande.status }}
                                                </button>
                                            {% else %}
                                                <button class="btn btn-secondary">
                                                    {{ commande.numero }} - {{ commande.status }}
                                                </button>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
