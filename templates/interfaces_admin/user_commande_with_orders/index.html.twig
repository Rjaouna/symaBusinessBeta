{# templates/user_command/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Utilisateurs avec Commandes{% endblock %}

{% block body %}
    <div class="container mt-5">
<h6 class="my-3 border-bottom border-secondary fw-bold text-uppercase">Commandes en attentes de validation </h6>

        {% if usersWithOrders is empty %}
            <div class="alert alert-warning" role="alert">
                Aucun utilisateur n'a de commandes en cours ou en attente.
            </div>
        {% else %}
            <table class="table table-striped table-bordered">
                <thead class="thead-light">
                    <tr>
                        <th scope="col">Client</th>
                        <th scope="col">Pointage</th>
                        <th scope="col">Détails des Commandes</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in usersWithOrders %}
                        <tr>
    <td class="align-middle">{{ item.user.nomResponsable }}</td>
    <td class="align-middle">
        <div class="d-flex align-items-center">
            <a href="{{ path('biper_serial_number', {'clientId': item.user.codeClient}) }}" class="btn btn-link me-2" title="Pointage Manuel">
                <i class="bi bi-hand-index fs-5"></i>
            </a>
            <a href="{{ path('biper_commande', {'clientId': item.user.codeClient}) }}" class="btn btn-link" title="Scan">
                <i class="bi bi-upc-scan fs-5"></i>
            </a>
        </div>
    </td>
    <td class="align-middle">
        <div class="d-flex flex-wrap">
            {% for commande in item.commandes %}
                <div class="m-1">
                    {% if commande.status == 'en_cours' %}
                        <span class="badge bg-warning text-dark">En Cours</span>
                        <button class="btn btn-outline-primary">
                            Commande ID: {{ commande.numero }} - {{ commande.simType }} - Qtée: {{ commande.qte }} 
                        </button>
                    {% else %}
                        <span class="badge bg-success">En attente</span>
                        <button class="btn btn-outline-secondary">
                            {{ commande.numero }} - {{ commande.simType }} - Qtée: {{ commande.qte }}
                        </button>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </td>
</tr>

                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
