{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
<h4 class="mb-3 border-bottom border-secondary pb-2">
    <i class="text-secondary bi bi-cart-fill fs-2 text-secondary"></i> Commande {{ commande.numero }}</h4>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Numero</th>
                <td>{{ commande.numero }}</td>
            </tr>
            <tr>
                <th>Qte</th>
                <td>{{ commande.qte }}</td>
            </tr>
            <tr>
                <th>Qtevalidee</th>
                <td>{{ commande.qtevalidee }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ commande.total }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ commande.status }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ commande.updatedAt ? commande.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>SimType</th>
                <td>{{ commande.SimType }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_commande_index') }}">Retour Ã  la liste des commandes</a>


{% endblock %}
