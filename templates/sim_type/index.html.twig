{% extends 'base.html.twig' %}

{% block title %}SimType index{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark  fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb  mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Gestion de types cartes SIM
        </ol>
    </nav>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary btn-sm" href="{{ path('app_sim_type_new') }}">Ajouter un nouveau type</a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th>Prix</th>
                <th>Date de création</th>
                <th>Dernière MAJ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for sim_type in sim_types %}
            <tr>
                <td>{{ sim_type.nom }}</td>
                <td>{{ sim_type.code }}</td>
                <td>{{ sim_type.prix }}</td>
                <td>{{ sim_type.createdAt ? sim_type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sim_type.updatedAt ? sim_type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_sim_type_edit', {'id': sim_type.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
