{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-12 col-md-5 mt-4 mb-2 px-4 py-3 rounded shadow-sm bg-white">
        <div class="text-center mb-4">
            <img src="/assets/img/logo_syma.svg" class="brand_logo" alt="Logo" style="width: 40%;">
        </div>
        
        <form method="post" class="w-100">
            {% if error %}
                <div class="alert alert-danger rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>
            
            <div class="mb-3 position-relative">
            <i class="bi bi-envelope fs-4 position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);"></i>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-lg ps-5  w-100" placeholder="Entrez votre adresse email" autocomplete="email" required autofocus>
            </div>
            
            <div class="mb-3  position-relative">
            <i class="bi bi-lock fs-4 position-absolute" style="top: 50%; left: 10px; transform: translateY(-50%);"></i>
                <input type="password" name="password" id="inputPassword" class="form-control-lg ps-5  w-100" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group mb-3">
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="customControlInline" name="remember_me">
                    <label class="custom-control-label" for="customControlInline">{{ 'Se souvenir de moi'|trans }}</label>
                </div>
            </div>

            <button class="btn btn-primary w-100 fs-5" type="submit">
                Connexion
            </button>
        </form>
        
        <div class="mt-3 d-flex justify-content-between">
    <p class="mb-0">Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}">S'inscrire</a></p>
    <p class="mb-0"><a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a></p>
</div>

    </div>
</div>
{% endblock %}
