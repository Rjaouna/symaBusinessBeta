{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="py-5" style="background-color: #ffffff;">


  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <!-- Section image -->
            <div class="col-md-6 col-lg-5 d-flex align-items-center justify-content-center">
              <img src="{{ asset('/assets/img/logo-syma@4x.jpg') }}"
                alt="login form" class="img-fluid" style="max-width: 80%; border-radius: 1rem 0 0 1rem;" />
            </div>
            <!-- Section formulaire -->
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post" class="w-100">
                  {% if error %}
                      <div class="alert alert-danger rounded">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                  {% endif %}

                  {% if app.user %}
                      <div class="mb-3">
                          Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                      </div>
                  {% endif %}

                  <div class="d-flex align-items-center mb-3 pb-1">
                    <span class="h1 fw-bold mb-0">Page de connexion</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Identifiez-vous</h5>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control form-control-lg" placeholder="Entrez votre adresse email" autocomplete="email" required autofocus>
                    <label class="form-label" for="inputEmail">Adresse email</label>
                  </div>

                  <div data-mdb-input-init class="form-outline mb-4">
                    <input type="password" name="password" id="inputPassword" class="form-control form-control-lg" placeholder="Entrez votre mot de passe" autocomplete="current-password" required>
                    <label class="form-label" for="inputPassword">Mot de passe</label>
                  </div>

                  <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                  <div class="form-check mb-2 text-left">
                    <input type="checkbox" class="form-check-input" id="customControlInline" name="remember_me">
                    <label class="custom-control-label" for="customControlInline">{{ 'Se souvenir de moi'|trans }}</label>
                  </div>

                  <div class="pt-1 mb-4">
                    <button class="btn btn-dark btn-lg btn-block w-100" type="submit">S'identifier</button>
                  </div>

                  <a class="small text-muted" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;">Vous n'avez pas encore de compte ? <a href="{{ path('app_register') }}" style="color: #393f81;">S'inscrire ici</a></p>
                  <a href="#!" class="small text-muted">Conditions d'utilisation</a>
                  <a href="#!" class="small text-muted">Politique de confidentialité</a>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
