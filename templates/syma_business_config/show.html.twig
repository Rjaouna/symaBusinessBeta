{% extends 'base.html.twig' %}

{% block title %}Configuration de l'entitée{% endblock %}

{% block body %}
<h3 class="mb-5 border-bottom border-secondary pb-2"><i class="bi bi-sliders "></i> {{ syma_business_config.raisonSociale }}</h3>

    <table class="table">
        <tbody>
            
            <tr>
                <th>Nom Du Responsable</th>
                <td>{{ syma_business_config.nomDuResponsable }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ syma_business_config.email }}</td>
            </tr>
            <tr>
                <th>Numero De Téléphone</th>
                <td>{{ syma_business_config.numeroDeTelephone }}</td>
            </tr>
            <tr>
                <th>Numéro De Fixe</th>
                <td>{{ syma_business_config.numeroDeFixe }}</td>
            </tr>
            <tr>
                <th>Raison Sociale</th>
                <td>{{ syma_business_config.raisonSociale }}</td>
            </tr>
            <tr>
                <th>Numero De Registre</th>
                <td>{{ syma_business_config.numeroDeRegistre }}</td>
            </tr>
            <tr>
                <th>Forme Juridique</th>
                <td>{{ syma_business_config.formeJuridique }}</td>
            </tr>
            <tr>
                <th>Code Ape / Naf</th>
                <td>{{ syma_business_config.codeApeNaf }}</td>
            </tr>
            <tr>
                <th>Capital Social</th>
                <td>{{ syma_business_config.capitalSocial }}</td>
            </tr>
            <tr>
                <th>Numéro De Tva Intracommunautaire</th>
                <td>{{ syma_business_config.numeroDeTvaIntracommunautaire }}</td>
            </tr>
            <tr>
                <th>Numéro Siret</th>
                <td>{{ syma_business_config.numeroSiret }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary btn-sm" href="{{ path('app_syma_business_config_index') }}">Quitter</a>

    <a class="btn btn-primary btn-sm" href="{{ path('app_syma_business_config_edit', {'id': syma_business_config.id}) }}">Modifier</a>

{% endblock %}
