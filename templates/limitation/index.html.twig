{% extends 'base.html.twig' %}

{% block title %}Limitation index{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark  fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb  mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Gestion des Limitations
        </ol>
    </nav>
</div>
<div class="d-flex justify-content-end">
    <a class="btn btn-secondary btn-sm mb-2" href="{{ path('app_limitation_new') }}">Ajouter une limitation</a>
</div>
    <table class="table">
        <thead>
            <tr>
                <th>Type carte Sim</th>
                <th>Limite</th>
                <th>Prix</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for limitation in limitations %}
            <tr>
                <td>{{ limitation.typeCarte}}</td>
                <td>{{ limitation.limite }}</td>
                <td>{{ limitation.prix }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_limitation_edit', {'id': limitation.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune limite n'a été programée.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
