            <!-- Champ Sim 20 Quota -->
            <div class="form-floating mb-3">
                {{ form_widget(form.sim20Quota, {
                    'attr': {
                        'class': 'form-control' ~ (form.sim20Quota.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez le quota pour Sim 20'
                    }
                }) }}
                <label for="{{ form.sim20Quota.vars.id }}">Quota pour Sim 20</label>
                {{ form_errors(form.sim20Quota) }}
            </div>
        </div>
    </div>

    <!-- Boutons de Soumission -->
    <div class="d-flex justify-content-end">
        <a href="{{ path('app_quota_index') }}" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left-circle me-1"></i> Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle me-1"></i> {{ button_label|default('Enregistrer') }}
        </button>
    </div>
{{ form_end(form) }}