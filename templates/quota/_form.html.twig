            </div>
        </div>
        <div class="col-md-6">
            <!-- Champ Sim 10 Quota -->
            <div class="form-floating mb-3">
                {{ form_widget(form.sim10Quota, {
                    'attr': {
                        'class': 'form-control' ~ (form.sim10Quota.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez le quota pour Sim 10'
                    }
                }) }}
                <label for="{{ form.sim10Quota.vars.id }}">Quota pour Sim 10</label>
