{# templates/quota/_form.html.twig #}

{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-md-6">
            <!-- Champ Nom -->
            <div class="form-floating mb-3">
                {{ form_widget(form.nom, {
                    'attr': {
                        'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez le nom'
                    }
                }) }}
                <label for="{{ form.nom.vars.id }}">Nom</label>
                {{ form_errors(form.nom) }}
            </div>
        </div>
        <div class="col-md-6">
            <!-- Champ Code -->
            <div class="form-floating mb-3">
                {{ form_widget(form.code, {
                    'attr': {
                        'class': 'form-control' ~ (form.code.vars.errors|length > 0 ? ' is-invalid' : ''),
                        'placeholder': 'Entrez le code'
                    }
                }) }}
                <label for="{{ form.code.vars.id }}">Code</label>
                {{ form_errors(form.code) }}
            </div>
        </div>
    </div>

    <div class="row">
