{% extends 'base.html.twig' %}

{% block title %}Configuration de l'utilisateur{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark ps-3 fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb ps-3 mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Clients / : {{ user.nomResponsable }} 
            </li>
        </ol>
    </nav>
</div>

{{ form_start(form, {'action': path('app_user_edit', {'id': user.id})}) }}

    <div class="row">
        <div class="col-md-6">
            <!-- Section pour les informations personnelles -->
            <div class="card bg-light mb-3">
                <div class="card-header">Informations Personnelles</div>
                <div class="card-body">
                    {{ form_row(form.codeClient) }}
                    {{ form_row(form.nomResponsable) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.telephoneMobile) }}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Section pour les informations de la société -->
            <div class="card bg-light mb-3">
                <div class="card-header">Informations Société</div>
                <div class="card-body">
                    {{ form_row(form.nomSociete) }}
                    {{ form_row(form.numeroSiret) }}
                    {{ form_row(form.adresse) }}
                    {{ form_row(form.pays) }}
                    {{ form_row(form.ville) }}
                   
                </div>
            </div>
        </div>
    </div>

    <!-- Section pour les quotas et boutons -->
    <div class="row mb-2">
        <div class="col-md-12">
            <div class="card bg-light ">
                <div class="card-body">
                    {{ form_row(form.quotas) }}
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex ">
        <a href="{{ path('app_user_index') }}" class="btn btn-secondary btn-sm mx-2">
            Annuler
        </a>

        <button type="submit" class="btn btn-primary btn-sm">
            {{ button_label|default('Mise à jour') }}
        </button>
    </div>

{{ form_end(form) }}

{% endblock %}
