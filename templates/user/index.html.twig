{# templates/user/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Liste des Utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Liste des clients
            </li>
        </ol>
    </nav>
</div>

<div class="container-fluid">
    <!-- Bouton pour ajouter un nouvel utilisateur -->
    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_user_new_commercial') }}" class="btn btn-secondary">
            <i class="bi bi-plus-circle me-1"></i> Créer un Nouveau commercial
        </a>
    </div>

    <table id="myDataTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Code client</th>
                <th>Nom Responsable</th>
                <th>Email</th>
                <th>Téléphone Mobile</th>
                <th>Rôle</th> <!-- Nouvelle colonne Rôle -->
                <th>Actions</th> <!-- Renommé pour plus de clarté -->
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.codeClient }}</td>
                    <td>{{ user.nomResponsable }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.telephoneMobile }}</td>
                    <td>
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <span class="badge bg-danger">Admin</span>
                            {% elseif role == 'ROLE_COMMERCIAL' %}
                                <span class="badge bg-primary">Commercial</span>
                            {% else %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endif %}
                        {% endfor %}
                    </td>
                    <td>
                        <a class="btn btn-secondary btn-sm me-1" href="{{ path('app_user_show', {'id': user.id}) }}" title="Détails">
                            <i class="bi bi-eye me-1"></i> 
                        </a>
                        <a class="btn btn-primary btn-sm me-1" href="{{ path('app_user_edit', {'id': user.id}) }}" title="Modifier">
                            <i class="bi bi-pencil-square me-1"></i> 
                        </a>
                        <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" class="d-inline delete-form">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                            <button class="btn btn-danger btn-sm" type="submit" title="Supprimer" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                                <i class="bi bi-trash me-1"></i> 
                            </button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun enregistrement trouvé</td> <!-- Ajusté à colspan="6" -->
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock %}
