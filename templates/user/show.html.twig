{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark ps-3 fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb ps-3 mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Clients / : {{ user.nomResponsable }} ({{ user.codeClient }})
            </li>
        </ol>
    </nav>
</div>
<div class="row">
    <div class="col-md-6">
        <!-- Section pour les informations personnelles -->
        <div class="card bg-light mb-3">
            <div class="card-header">Informations Personnelles</div>
            <div class="card-body">
                <p><strong>Code Client:</strong> {{ user.codeClient }}</p>
                <p><strong>Nom Responsable:</strong> {{ user.nomResponsable }}</p>
                <p><strong>Email:</strong> {{ user.email }}</p>
                <p><strong>Téléphone Mobile:</strong> {{ user.telephoneMobile }}</p>
                <p><strong>Is Verified:</strong> {{ user.isVerified ? 'Oui' : 'Non' }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <!-- Section pour les informations de la société -->
        <div class="card bg-light mb-3">
            <div class="card-header">Informations Société</div>
            <div class="card-body">
                <p><strong>Raison sociale:</strong> {{ user.nomSociete }}</p>
                <p><strong>Numéro SIRET:</strong> {{ user.numeroSiret }}</p>
                <p><strong>Adresse:</strong> {{ user.adresse }}</p>
                <p><strong>Pays:</strong> {{ user.pays }}</p>
                <p><strong>Ville:</strong> {{ user.ville }}</p>
                
            </div>
        </div>
    </div>
</div>
 <!-- Section pour les quotas et boutons -->
    <div class="row mb-5">
        <div class="col-md-12">
            <div class="card bg-light mb-3">
                <div class="card-body">
            <p><strong>Le quota activé:</strong></p>
                    {{ (user.quotas) }}
                </div>
            </div>
        </div>
    </div>
<div class="d-flex justify-content-between">
    <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-primary">Modifier</a>
</div>

{% endblock %}
