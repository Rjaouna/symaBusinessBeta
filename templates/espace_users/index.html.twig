{% extends 'base.html.twig' %}

{% block title %}Espace client{% endblock %}

{% block body %}
{% if app.user %}
<div class="d-flex flex-column flex-md-row gap-2 my-2">
  <a href="{{ path('app_profile') }}" class="btn btn-lg btn-secondary w-100 py-3">
    <h6 class="mb-0"><i class="bi bi-person"></i> Mon profil</h6>
  </a>
  <a href="{{ path('app_logout') }}" class="btn btn-lg btn-secondary w-100 py-3">
    <h6 class="mb-0"><i class="bi-box-arrow-right text-primary"></i> Déconnexion</h6>
  </a>
</div> 
{% endif %}

{% if is_granted('ROLE_ADMIN') %}
<div class="d-flex flex-column flex-md-row gap-2 my-2">
  <a href="{{ path('app_syma_business_config_index') }}" class="btn btn-lg btn-secondary w-100 py-3">
    <h6 class="mb-0"><i class="bi bi-person"></i> Config agent</h6>
  </a>
  <a href="{{ path('app_logout') }}" class="btn btn-lg btn-secondary w-100 py-3">
    <h6 class="mb-0"><i class="bi-box-arrow-right text-primary"></i> Déconnexion</h6>
  </a>
</div>
{% endif %}
{% endblock %}
