<div id="bannerCarousel" class="carousel slide {% if app.user and  is_granted('ROLE_COMMERCIAL') %} d-none {% endif %} " data-bs-ride="carousel" data-bs-interval="5000">
  <div class="carousel-inner">
    {% for i, banner in banners|batch(3) %}
      <div class="carousel-item {% if loop.first %}active{% endif %}">
        <div class="row">
          {% for b in banner %}
            <div class="col-md-4">
              <div class="bg-white m-2 my-2">
                <img class="w-100 rounded shadow-sm" src="{{ asset('uploads/banners/' ~ b.image) }}" alt="{{ b.nom }}">
              </div>
            </div>
          {% endfor %}
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- ContrÃ´les du carrousel -->
  <button class="carousel-control-prev" type="button" data-bs-target="#bannerCarousel" data-bs-slide="prev">
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#bannerCarousel" data-bs-slide="next">
  </button>
</div>
