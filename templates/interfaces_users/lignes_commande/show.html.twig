{% extends 'base.html.twig' %}

{% block title %}Détail de la Commande {{ numeroCommande }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <h3 class="mb-4 border-bottom border-secondary"><i class="text-secondary bi bi-cart"></i> Détail Commande : {{ numeroCommande }}</h3>

    <div class="mb-4">
	    <strong>Code client :</strong> {{app.user.codeClient}}<br>
        <strong>Date d'envoi de la commande :</strong> Le {{ commande.createdAt ? commande.createdAt|date('Y-m-d') : 'N/A' }} à {{ commande.createdAt ? commande.createdAt|date('H:i:s') : 'N/A' }}<br>
        <strong>Date d'envoi de validation :</strong> Le {{ commande.updatedAt ? commande.updatedAt|date('Y-m-d') : 'N/A' }} à {{ commande.updatedAt ? commande.updatedAt|date('H:i:s') : 'N/A' }}
    </div>

    {% if lignesCommande is empty %}
        <div class="alert alert-warning" role="alert">
            Aucune ligne de commande trouvée pour ce numéro de commande.
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th scope="col">Numéro de la commande</th>
                        <th scope="col">Carte SIM</th>
                        <th scope="col">Type SIM</th>
                        <th scope="col">Prix Unitaire</th>
                        <th scope="col">Date d'ajout</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ligne in lignesCommande %}
                        <tr>
                            <td>{{ commande.numero }}</td>
                            <td>{{ ligne.cartesSims.serialNumber }}</td>
                            <td>{{ ligne.typeSim.nom }}</td>
                            <td>{{ ligne.prixUnitaire|number_format(2, ',', ' ') }} €</td> <!-- Formater le prix -->
                            <td>{{ ligne.createdAt ? ligne.createdAt|date('Y-m-d H:i:s') : 'N/A' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}

    <div class="mt-4">
        <a href="{{path('user_app_commande_index')}}" class="btn btn-primary">Retour à la liste des commandes</a> <!-- Remplacez par la bonne route -->
    </div>
</div>
{% endblock %}
