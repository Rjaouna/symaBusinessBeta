{% extends 'base.html.twig' %}

{% block title %}Modifier le Profil{% endblock %}

{% block body %}
<h3 class="mb-5  border-bottom border-secondary pb-2"><i class="text-secondary bi bi bi-person"></i> Modification Profil 
</h3>

{{ form_start(form) }}

<div class="row">
    <div class="col-md-4">
        <!-- Section pour les informations personnelles -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">Informations Personnelles</h6>
            </div>
            <div class="card-body">
                {{ form_row(form.email, {'label': false, 'attr': {'placeholder': 'Entrez votre email'}}) }}
                {{ form_row(form.nomResponsable, {'label': false, 'attr': {'placeholder': 'Entrez votre nom'}}) }}
                {{ form_row(form.telephoneMobile, {'label': false, 'attr': {'placeholder': 'Entrez votre téléphone mobile'}}) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour les informations de la société -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0">Informations Société</h6>
            </div>
            <div class="card-body">
                {{ form_row(form.nomSociete, {'label': false, 'attr': {'placeholder': 'Entrez le nom de la société'}}) }}
                {{ form_row(form.numeroSiret, {'label': false, 'attr': {'placeholder': 'Entrez le numéro SIRET'}}) }}
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour l'adresse -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0">Adresse</h6>
            </div>
            <div class="card-body">
                {{ form_row(form.adresse, {'label': false, 'attr': {'placeholder': 'Entrez votre adresse'}}) }}
                {{ form_row(form.pays, {'label': false, 'attr': {'placeholder': 'Entrez le pays'}}) }}
                {{ form_row(form.codePostal, {'label': false, 'attr': {'placeholder': 'Entrez le code postal'}}) }}
                {{ form_row(form.ville, {'label': false, 'attr': {'placeholder': 'Entrez la ville'}}) }}
            </div>
        </div>
    </div>
</div>

<!-- Section pour les informations bancaires en bas sur toute la largeur -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-dark text-white">
        <h6 class="mb-0">Informations Bancaires</h6>
    </div>
    <div class="card-body">
        {{ form_row(form.iban, {'label': false, 'attr': {'placeholder': 'Entrez votre IBAN'}}) }}
        {{ form_row(form.bic, {'label': false, 'attr': {'placeholder': 'Entrez votre BIC'}}) }}
    </div>
</div>

<div class="d-flex justify-content-between my-4">
    <a href="{{ path('app_profile') }}" class="btn btn-secondary">
        Annuler
    </a>
    <button type="submit" class="btn btn-primary">
        Mettre à jour
    </button>
</div>

{{ form_end(form) }}

{% endblock %}
