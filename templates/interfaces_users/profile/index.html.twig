{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<h3 class="mb-5  border-bottom border-secondary pb-2"><i class="text-secondary bi bi bi-person"></i> Détails de {{ user.nomResponsable }}
</h3>

<div class="row">
    <div class="col-md-4">
        <!-- Section pour les informations personnelles -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">Informations Personnelles</h6>
            </div>
            <div class="card-body">
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Nom de résponsable :</strong> {{ user.nomResponsable }}</p>
                <p><strong>Téléphone Fixe :</strong> {{ user.telephoneFixe }}</p>
                <p><strong>Téléphone Mobile :</strong> {{ user.telephoneMobile }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour les informations de la société -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0">Informations Société</h6>
            </div>
            <div class="card-body">
                <p><strong>Code Client :</strong> {{ user.codeClient }}</p>
                <p><strong>Nom Société :</strong> {{ user.nomSociete }}</p>
                <p><strong>Forme Juridique :</strong> {{ user.formeJuridique }}</p>
                <p><strong>Numéro Registre Commerce :</strong> {{ user.numeroRegistreCommerce }}</p>
                <p><strong>Numéro Siret :</strong> {{ user.numeroSiret }}</p>
                <p><strong>Numéro RCS :</strong> {{ user.numeroRCS }}</p>
                <p><strong>Code APE :</strong> {{ user.codeAPE }}</p>
                <p><strong>Kbis :</strong> {{ user.kbis }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour l'adresse -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-dark text-white">
                <h6 class="mb-0">Adresse</h6>
            </div>
            <div class="card-body">
                <p><strong>Adresse :</strong> {{ user.adresse }}</p>
                <p><strong>Pays :</strong> {{ user.pays }}</p>
                <p><strong>Code Postal :</strong> {{ user.codePostal }}</p>
                <p><strong>Ville :</strong> {{ user.ville }}</p>
            </div>
        </div>
    </div>
</div>

<!-- Section pour les informations bancaires en bas sur toute la largeur -->
<div class="card mb-4 shadow-sm">
    <div class="card-header bg-dark text-white">
        <h6 class="mb-0">Informations Bancaires</h6>
    </div>
    <div class="card-body">
        <p><strong>IBAN :</strong> {{ user.iban }}</p>
        <p><strong>BIC :</strong> {{ user.bic }}</p>
    </div>
</div>

<div class="d-flex justify-content-between my-4">
    <a href="{{ path('app_syma_business') }}" class="btn btn-secondary">
        Retour à la page d'accueil
    </a>
    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
        Modifier
    </a>
</div>

{% endblock %}
