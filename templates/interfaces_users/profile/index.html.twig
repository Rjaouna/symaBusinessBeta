{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-3 mb-4 border-bottom">
        <h1 class="text-dark  fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Client
        </h1>
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb  mb-4 bg-white rounded shadow-sm">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Profil {{ user.nomResponsable }}
            </li>
        </ol>
    </nav>
    </div>

<div class="row">
    <div class="col-md-4">
        <!-- Section pour les informations personnelles -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h6 class="mb-0">Informations Personnelles</h6>
            </div>
            <div class="card-body">
          {% if is_granted('ROLE_ADMIN') %}
            <p>{% for role in user.roles %}
    <span class="badge bg-primary">{{ role }}</span>
{% endfor %}</p>
{% endif %}
                <p><strong>Email :</strong> {{ user.email }}</p>
                <p><strong>Nom de résponsable :</strong> {{ user.nomResponsable }}</p>
                <p><strong>Téléphone Mobile :</strong> {{ user.telephoneMobile }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour les informations de la société -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-secondary">
                <h6 class="mb-0">Informations Société</h6>
            </div>
            <div class="card-body">
                <p><strong>Code Client :</strong> {{ user.codeClient }}</p>
                <p><strong>Nom Société :</strong> {{ user.nomSociete }}</p>
                <p><strong>Numéro Siret :</strong> {{ user.numeroSiret }}</p>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <!-- Section pour l'adresse -->
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-secondary">
                <h6 class="mb-0">Adresse</h6>
            </div>
            <div class="card-body">
                <p><strong>Adresse :</strong> {{ user.adresse }}</p>
                <p><strong>Pays :</strong> {{ user.pays }}</p>
                <p><strong>Ville :</strong> {{ user.ville }}</p>
            </div>
        </div>
    </div>
</div>



<div class="d-flex justify-content-between my-4">
    <a href="{{ path('app_syma_business') }}" class="btn btn-secondary">
        Retour à la page d'accueil
    </a>
    <a href="{{ path('app_profile_edit') }}" class="btn btn-primary">
        Modifier
    </a>
</div>

{% endblock %}
