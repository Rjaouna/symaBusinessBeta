{% extends 'base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block body %}
<h3 class="mb-3  border-bottom border-secondary"><i class="text-secondary bi bi bi-cart"></i> Liste Commandes</h3>

    <table id="myDataTable" class="table">
        <thead>
            <tr>
                <th>Numéro</th>
                <th>Type carte Sim</th>
                <th>Qté</th>
                <th>Qté validé</th>
                <th>Total</th>
                <th>Status</th>
                <th>Date création</th>
                <th>Dérnière MAJ</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.numero }}</td>
                <td>{{ commande.SimType }}</td>
                <td>{{ commande.qte }}</td>
                <td>{{ commande.qtevalidee }}</td>
                <td>{{ commande.total }}</td>
                <td>{{ commande.status }}</td>
                <td>{{ commande.createdAt ? commande.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.updatedAt ? commande.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('lignes_commande_show', {'numeroCommande': commande.numero}) }}">Détails</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
