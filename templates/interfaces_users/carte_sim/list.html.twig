{# templates/cartesim/list.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes Cartes SIM{% endblock %}



{% block body %}
<h3 class="mb-3  border-bottom border-secondary"><i class="text-secondary bi bi-sim"></i> Mes Cartes SIM</h3>

    {% if cartesSim is empty %}
        <p>Aucune carte SIM achetée.</p>
    {% else %}
        <table id="myDataTable" class="display">
            <thead>
                <tr>
                    <th>Serial Number</th>
                    <th>Type</th>
                    <th>Statut</th>
                    <th>Client</th>
                    <th>Date d'attribution</th>
                    <th>Etat</th>
                    <th>Usage Final</th>
                </tr>
            </thead>
            <tbody>
                {% for carte in cartesSim %}
                    <tr>
                        <td>{{ carte.serialNumber }}</td>
                        <td>{{ carte.type.nom }}</td>
                        <td>{{ carte.isReserved ? 'Réservée' : 'Disponible' }}</td>
                        <td>{{ carte.user }}</td>
                        <td>Le {{ carte.createdAt ? carte.createdAt|date('Y-m-d') : '' }} à {{ carte.createdAt ? carte.createdAt|date('H:i:s') : '' }}</td>
                        <td>{{ carte.etat }}</td>
                        <td>{{ carte.usageFinale }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}



{% endblock %}
