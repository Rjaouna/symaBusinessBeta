{% extends 'base.html.twig' %}

{% block title %}Gestion des banners{% endblock %}

{% block body %}
    <h3 class="mb-5 border-bottom border-secondary pb-2"><i class="bi bi-sliders "></i> Gestion des banners</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for banner in banners %}
            <tr>
                <td>{{ banner.id }}</td>
                <td>{{ banner.nom }}</td>
                <td>{{ banner.image }}</td>
                <td>
                    <a href="{{ path('app_banner_edit', {'id': banner.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if bannerCount < 3 %}
    <a href="{{ path('app_banner_new') }}">Create new</a>
    {% endif %}
{% endblock %}
