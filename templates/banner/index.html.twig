{% extends 'base.html.twig' %}

{% block title %}Gestion des banners{% endblock %}

{% block body %}
    <h3 class="mb-3 border-bottom border-secondary pb-2 mt-2"><i class="bi bi-megaphone fs-4"></i> Gestion des banners</h1>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Nom</th>
                <th>Image</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for banner in banners %}
            <tr>
                <td>{{ banner.id }}</td>
                <td>{{ banner.nom }}</td>
                <td><img src="{{ asset('uploads/banners/' ~ banner.image) }}" alt="Bannière" style="width: 50px; height: auto;"></td>
                <td class="text-end">
                    <a class="btn btn-primary btn-sm" href="{{ path('app_banner_edit', {'id': banner.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucune pub créée !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-secondary btn-sm" href="{{ path('app_banner_new') }}">Ajouter une nouvelle pub !</a>
    
{% endblock %}
