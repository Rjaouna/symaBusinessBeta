{% extends 'base.html.twig' %}

{% block title %}CarteSim - Administration{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Titre principal avec icône -->
    <div class="d-flex align-items-center justify-content-between bg-light py-4 mb-4 border-bottom shadow-sm">
        <h1 class="text-dark fw-bold text-uppercase mb-0" style="font-size: 1.8rem;">
            <i class="bi bi-shield-lock me-2"></i> Espace Administrateur
        </h1>
       
    </div>

    <!-- Fil d'Ariane stylisé -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-4 bg-white rounded shadow-sm px-3 py-2">
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    <i class="bi bi-house-door-fill me-1"></i> Accueil
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_syma_business') }}" class="text-decoration-none text-primary">
                    Dashboard
                </a>
            </li>
            <li class="breadcrumb-item active text-muted" aria-current="page">
                Type cartes SIM
            </li>
        </ol>
    </nav>

    <!-- Section cartes SIM -->
    <div class="row">
        {% for type in carte_sims_by_type %}
    <div class="col-md-4 col-lg-3 mb-4">
        <div class="card h-100 border-0 shadow-sm">
            <div class="card-body">
                <h5 class="card-title text-dark fw-bold mb-3" style="font-size: 1.3rem;">
                    {{ type.typeName }}
                </h5>
                <p class="card-text">
                    <strong>Stock actuel : </strong>
                    <span class="{% if type.count < 30 %}text-danger{% else %}text-success{% endif %}">
                        {{ type.count }} unités
                    </span>

                    
                </p>

                <p class="mb-1">
                    <strong>Chapelets : </strong>
                    <small class="text-muted">{{ (type.count / 5) | round(0, 'floor') }}</small>
                </p>

                {% if type.count < 30 %}
                    <div class="alert alert-warning py-1 px-2 mt-3 text-center" style="font-size: 0.9rem;">
                        <i class="bi bi-exclamation-circle-fill me-1"></i> Stock faible !
                    </div>
                {% endif %}
                {% if quantitesRestantes[type.typeName] is defined %}
                        {% if type.count < quantitesRestantes[type.typeName] %}
                            <div><span class="text-warning">Pas assez de stock pour valider toutes les commandes en cours</span></div>
                        {% endif %}
                    {% endif %}
            </div>


            <div class="card-footer bg-light text-center">
                <a href="/carte/sim/{{ type.typeName|replace({' ': ''})|lower }}" class="btn btn-outline-dark btn-sm w-100">
                    Voir les cartes
                </a>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12">
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle me-1"></i> Aucun type de carte SIM disponible pour le moment.
        </div>
    </div>
{% endfor %}


    </div>
</div>
{% endblock %}
