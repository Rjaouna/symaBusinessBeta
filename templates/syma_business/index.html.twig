{% extends 'base.html.twig' %}

{% block title %}Hello SymaBusinessController!{% endblock %}

{% block body %}
{% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
    {% if missingProperties is not empty %}
        <h3>Informations manquantes :</h3>
        <ul>
            {% for property in missingProperties %}
                <li>{{ property }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Votre profil est complet.</p>
    {% endif %}
{% endif %}

{% endblock %}
