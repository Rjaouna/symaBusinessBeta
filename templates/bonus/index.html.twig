{% extends 'base.html.twig' %}

{% block title %}Bonus index{% endblock %}

{% block body %}

<div class="container-fluid">
{% include 'partials/header_card.html.twig' with {
        icon_class: 'bi bi-shield-lock',
        section_icon_class: 'bi bi-list-check',
        section_title: 'Gestion des bonus',
        button_text: 'Attribuer un bonus',
        button_link: path('app_bonus_new'),
        button_style :'success'

    } %}
    
   
    <table class="table">
        <thead>
            <tr>
                {# <th>Id</th> #}
                <th>Valeur</th>
                <th>Nom complet de Client</th>
                <th>Motif de bonus</th>
                <th>Date d'attribution</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for bonu in bonuses %}
            <tr>
                {# <td>{{ bonu.id }}</td> #}
                <td><strong>{{ bonu.valeur|number_format(2, ',', ' ') }} €</strong></td>
                <td>{{ bonu.user.nomResponsable }}</td>
                <td>{{ bonu.motif }}</td>
                <td>{{ bonu.createdAt ? bonu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_bonus_show', {'id': bonu.id}) }}">Détails</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>
{% endblock %}
