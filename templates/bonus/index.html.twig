{% extends 'base.html.twig' %}

{% block title %}Bonus index{% endblock %}

{% block body %}
    <h1>Bonus index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Valeur</th>
                <th>Utilisateur</th>
                <th>Motif</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bonu in bonuses %}
            <tr>
                <td>{{ bonu.id }}</td>
                <td>{{ bonu.valeur }}</td>
                <td>{{ bonu.user }}</td>
                <td>{{ bonu.motif }}</td>
                <td>{{ bonu.createdAt ? bonu.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_bonus_show', {'id': bonu.id}) }}">show</a>
                    <a href="{{ path('app_bonus_edit', {'id': bonu.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_bonus_new') }}">Create new</a>
{% endblock %}
