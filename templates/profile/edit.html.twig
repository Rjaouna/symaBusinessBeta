{% extends 'base.html.twig' %}

{% block title %}Éditer le Profil{% endblock %}

{% block body %}
<h3 class="mb-5 border-bottom border-secondary pb-2">
    <i class="bi bi-person-circle"></i> Modification Profil 
</h3>

{{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <!-- Section pour les informations personnelles -->
            <div class="card bg-light mb-3">
                <div class="card-header">Informations Personnelles</div>
                <div class="card-body">
                    {{ form_row(form.email) }}
                    {{ form_row(form.nomResponsable) }}
                    {{ form_row(form.telephoneFixe) }}
                    {{ form_row(form.telephoneMobile) }}
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <!-- Section pour les informations de la société -->
            <div class="card bg-light mb-3">
                <div class="card-header">Informations Société</div>
                <div class="card-body">
                    {{ form_row(form.nomSociete) }}
                    {{ form_row(form.formeJuridique) }}
                    {{ form_row(form.numeroRegistreCommerce) }}
                    {{ form_row(form.numeroSiret) }}
                    {{ form_row(form.numeroRCS) }}
                    {{ form_row(form.codeAPE) }}
                    {{ form_row(form.facade) }}
                    {{ form_row(form.kbis) }}
                    {{ form_row(form.adresse) }}
                    {{ form_row(form.pays) }}
                    {{ form_row(form.codePostal) }}
                    {{ form_row(form.ville) }}
                    {{ form_row(form.iban) }}
                    {{ form_row(form.bic) }}
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a href="{{ path('app_profile') }}" class="btn btn-secondary">
            Annuler
        </a>
        <button type="submit" class="btn btn-primary">
            Mettre à jour
        </button>
    </div>

{{ form_end(form) }}

{% endblock %}
